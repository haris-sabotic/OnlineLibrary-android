<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/action_bar_search_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/action_bar_search_icon"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_search_icon"
        app:layout_constraintLeft_toLeftOf="@id/action_bar_search_icon"
        app:layout_constraintRight_toRightOf="@id/action_bar_search_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/action_bar_search_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_search" />

    <EditText
        android:id="@+id/action_bar_search_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:hint="@string/pretrazi_knjige"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:singleLine="true"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/action_bar_search_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>