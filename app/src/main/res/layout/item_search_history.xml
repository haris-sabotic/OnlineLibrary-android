<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_search_history_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBody1"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp" />

    <View
        android:id="@+id/item_search_history_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/item_search_history_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_search_history_icon"
        app:layout_constraintLeft_toLeftOf="@id/item_search_history_icon"
        app:layout_constraintRight_toRightOf="@id/item_search_history_icon" />

    <ImageView
        android:id="@+id/item_search_history_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_search_history_paste_arrow"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="@id/item_search_history_text"
        app:layout_constraintBottom_toBottomOf="@id/item_search_history_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>