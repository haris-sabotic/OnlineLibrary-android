<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_marginHorizontal="5dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_aktivnosti_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/item_aktivnosti_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/izdavanje_knjige"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_aktivnosti_img" />

        <TextView
            android:id="@+id/item_aktivnosti_text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Valentina K. vam je izdala knjigu Tom Sojer"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/item_aktivnosti_text_type"
            app:layout_constraintLeft_toLeftOf="@id/item_aktivnosti_text_type"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/item_aktivnosti_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 21, 2018"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/item_aktivnosti_text_description"
            app:layout_constraintLeft_toLeftOf="@id/item_aktivnosti_text_description" />


</androidx.constraintlayout.widget.ConstraintLayout>